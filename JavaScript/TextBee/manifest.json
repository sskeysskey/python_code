{
  "manifest_version": 3,
  "name": "Article Copier",
  "version": "1.0",
  "description": "Copy FT Bloomberg WSJ Economist technologyreview content to clipboard",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "*://*.ft.com/*",
    "*://*.bloomberg.com/*",
    "*://*.wsj.com/*",
    "*://*.economist.com/*",
    "*://*.technologyreview.com/*"
  ],
  "action": {
    "default_title": "Copy Article"
  },
  "background": {
    "service_worker": "background.js"
  }
}